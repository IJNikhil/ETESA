<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty.FacultyMarkReportActivity"
    android:padding="26dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutClassSelection"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="8dp">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/selectClass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select class"
            android:layout_weight="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutSubjectSelection"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutSemesterSelection"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="8dp">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/selectSubject"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select subject"
            android:layout_weight="1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutSemesterSelection"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutClassSelection"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="8dp">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/selectSemester"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select semester"
            android:layout_weight="1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDateSelection"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutSubjectSelection"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="8dp">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/selectDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:layout_weight="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_gravity="center_vertical"
        android:text="NEXT"
        app:icon="@drawable/person_icon"
        app:iconGravity="textStart"
        android:layout_marginVertical="8dp"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        android:layout_margin="16dp"/>

</RelativeLayout>